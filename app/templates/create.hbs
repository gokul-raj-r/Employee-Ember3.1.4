<h1>Employee Form</h1>
<br />
{{! _create.hbs }}

<div class="form-cointainer">
  <form class="form">
    <div class="form-group">
      <label> Employee Name</label>
      {{input
        type="text"
        name="name"
        placeholder="name"
        classNames="form-control"
        value=model.name
      }}<br />
    </div>

    <div class="form-group">
      <label> Age</label>
      {{input
        type="number"
        name="age"
        placeholder="age"
        min="18"
        max="80"
        classNames="form-control"
        value=model.age
      }}<br />
      {{#if (age-validate model.age)}}
        <span>Invalid age</span>
      {{/if}}
    </div>
    <div class="form-group">
      <label> Email</label>
      {{input
        type="email"
        name="email"
        placeholder="email"
        classNames="form-control"
        value=model.email
      }}<br />
    </div>
    <div class="form-group">
      <label> Salary</label>
      {{input
        type="number"
        name="salary"
        placeholder="salary"
        min="500"
        max="5000000"
        classNames="form-control"
        value=model.salary
      }}<br />
    </div>
    <div class="d-flex justify-content-center">
      <button
        class="btn btn-primary d-flex"
        disabled={{form-validate model.name model.age model.email model.salary}}
        {{action "submitForm" model}}
      >Submit</button>
    </div>
  </form>
</div>

